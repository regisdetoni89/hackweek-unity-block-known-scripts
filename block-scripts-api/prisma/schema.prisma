generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Script {
  id          Int      @id @default(autoincrement())
  hash        String   @unique(sort: Desc)
  content     String
  verified    Boolean
  isMalicious  Boolean
  usage       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ScriptUser{
  id        Int      @id @default(autoincrement())
  hash      String   
  steamId   String   
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique(name:"hashsteamid", [hash, steamId])
}